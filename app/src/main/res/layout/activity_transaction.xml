<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:id="@+id/main"
    android:background="#CCFFFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="370dp"
            android:layout_gravity="center"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/boder"
            android:text="   Tổng số dư: 0 VND"
            android:textColor="#2196F3"
            android:textDirection="firstStrong"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="26dp"
            android:text="Lịch sử ghi chép >>"
            android:textColor="#2196F3"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="16dp"
            android:background="@drawable/boder">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo giao dịch"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <EditText
                android:id="@+id/edtAmount"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nhập số tiền"
                android:inputType="numberDecimal"
                android:padding="10dp"/>

            <Spinner
                android:id="@+id/spnCategory"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:prompt="@string/choose_category_prompt"/>

            <EditText
                android:id="@+id/edtNote"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Ghi chú"
                android:padding="10dp"/>

            <Button
                android:id="@+id/btnDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn ngày"
                android:padding="10dp"/>

            <Spinner
                android:id="@+id/spnPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:prompt="@string/choose_payment_method_prompt"/>

            <Button
                android:id="@+id/btnCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tạo"
                android:textColor="@android:color/white"/>
        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        app:menu="@menu/bottom_nav_menu"
        android:layout_gravity="bottom"
        app:labelVisibilityMode="labeled"
        android:background="#2196F3"
        />

</LinearLayout>